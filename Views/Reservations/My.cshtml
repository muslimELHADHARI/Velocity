@model IEnumerable<Reservation>
@{
    ViewData["Title"] = "My reservations";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
    <div>
        <h2 class="fw-bold text-gradient mb-0">My Reservations</h2>
        <p class="text-muted small mb-0 mt-1">View and manage your bookings</p>
    </div>
    <a class="btn btn-primary-gradient" asp-controller="Vehicles" asp-action="Index">
        <i class="bi bi-plus-circle me-2"></i>Book Another
    </a>
</div>

<div class="card-modern">
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-calendar-x" style="font-size: 4rem; color: var(--text-muted); opacity: 0.5;"></i>
            <h5 class="mt-3 text-muted">No reservations yet</h5>
            <p class="text-muted">Start by booking a vehicle!</p>
            <a class="btn btn-primary-gradient mt-3" asp-controller="Vehicles" asp-action="Index">
                <i class="bi bi-bicycle me-2"></i>Browse Vehicles
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th>Vehicle</th>
                        <th>Period</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var res in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@res.Vehicle?.Name</div>
                                <small class="text-muted">
                                    <i class="bi bi-tag me-1"></i>@res.Vehicle?.Brand
                                </small>
                            </td>
                            <td>
                                <div class="fw-semibold">@res.StartDateTime.ToLocalTime().ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">
                                    @res.StartDateTime.ToLocalTime().ToString("HH:mm") - @res.EndDateTime.ToLocalTime().ToString("HH:mm")
                                </small>
                            </td>
                            <td>
                                <span class="badge px-3 py-2 mb-1 d-inline-block" style="background: var(--gradient-primary); color: white; border-radius: 20px;">@res.ReservationStatus</span>
                                <small class="text-muted d-block">@res.PaymentStatus (@res.PaymentMethod)</small>
                            </td>
                            <td class="fw-bold text-gradient" style="font-size: 1.125rem;">@res.TotalAmount TND</td>
                            <td class="text-end">
                                <a class="btn btn-primary-gradient btn-sm" asp-controller="Checkout" asp-action="Summary" asp-route-id="@res.Id">
                                    <i class="bi bi-eye me-1"></i>View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

