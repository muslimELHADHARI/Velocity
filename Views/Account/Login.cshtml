@model Velocity.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-card fade-in-up">
        <div class="auth-header">
            <h2 class="auth-title">Welcome Back</h2>
            <p class="auth-subtitle">Sign in to your Velocity account</p>
        </div>

        <form asp-action="Login" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group-floating">
                <input asp-for="Email" class="form-control" placeholder="" autocomplete="email" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group-floating">
                <input asp-for="Password" class="form-control" placeholder="" autocomplete="current-password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check form-switch mb-4 d-flex align-items-center">
                <input asp-for="RememberMe" class="form-check-input" id="rememberMeSwitch"/>
                <label asp-for="RememberMe" class="form-check-label ms-2" for="rememberMeSwitch">Remember me</label>
            </div>

            <button type="submit" class="btn btn-primary-gradient btn-lg w-100 mt-3">
                <span>Sign In</span>
                <i class="bi bi-arrow-right ms-2"></i>
            </button>
        </form>

        <div class="auth-footer">
            <p class="text-center mb-0">
                Don't have an account? 
                <a asp-action="Register" class="auth-link">Register now</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

