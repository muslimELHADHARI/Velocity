@model ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    var userRole = ViewData["UserRole"] as string ?? "Customer";
    var displayName = Model.Email.Contains("@") ? Model.Email.Split('@')[0] : Model.Email;
    displayName = System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(displayName);
}

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card-modern">
            <h3 class="fw-bold mb-4 text-gradient">
                <i class="bi bi-person-circle me-2"></i>Profile Information
            </h3>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success d-flex align-items-center mb-4">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <div>@TempData["SuccessMessage"]</div>
                </div>
            }

            <form asp-action="UpdateProfile" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group-floating">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-floating">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="" />
                            <label asp-for="PhoneNumber"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="p-3 rounded-3 mb-3" style="background: var(--gradient-card); border: 1px solid var(--border-color);">
                            <p class="text-muted small mb-1">Username</p>
                            <p class="fw-semibold mb-0">@displayName</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 rounded-3" style="background: var(--gradient-card); border: 1px solid var(--border-color);">
                            <p class="text-muted small mb-1">Account Created</p>
                            <p class="fw-semibold mb-0">@Model.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 rounded-3" style="background: var(--gradient-card); border: 1px solid var(--border-color);">
                            <p class="text-muted small mb-1">Account Status</p>
                            <span class="badge px-3 py-2 d-inline-block" style="background: @(Model.IsActive ? "var(--gradient-primary)" : "#999"); color: white; border-radius: 20px;">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary-gradient">
                            <i class="bi bi-save me-2"></i>Update Profile
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="card-modern mt-4">
            <h5 class="fw-bold mb-4 text-gradient">
                <i class="bi bi-lock me-2"></i>Change Password
            </h5>
            <form asp-action="ChangePassword" method="post">
                <div class="form-group-floating mb-3">
                    <input name="CurrentPassword" class="form-control" type="password" placeholder="Current Password" required />
                    <label>Current Password</label>
                </div>
                <div class="form-group-floating mb-3">
                    <input name="NewPassword" class="form-control" type="password" placeholder="New Password" required />
                    <label>New Password</label>
                </div>
                <div class="form-group-floating mb-4">
                    <input name="ConfirmPassword" class="form-control" type="password" placeholder="Confirm New Password" required />
                    <label>Confirm New Password</label>
                </div>
                <button type="submit" class="btn btn-primary-gradient">
                    <i class="bi bi-key me-2"></i>Change Password
                </button>
            </form>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card-modern">
            <div class="text-center mb-4">
                <div class="mb-3">
                    <div style="width: 100px; height: 100px; border-radius: 50%; background: var(--gradient-primary); display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                        <i class="bi bi-person-fill" style="font-size: 3rem; color: white;"></i>
                    </div>
                </div>
                <h5 class="fw-bold mb-1">@displayName</h5>
                <p class="text-muted mb-2">@Model.Email</p>
                <span class="badge px-3 py-2" style="background: var(--gradient-primary); color: white; border-radius: 20px;">
                    <i class="bi bi-@(userRole == "Admin" ? "shield-check" : "person") me-1"></i>@userRole
                </span>
            </div>
            <hr style="border-color: var(--border-color);" />
            <div class="d-grid gap-2">
                <a class="btn btn-primary-gradient" asp-controller="Reservations" asp-action="My">
                    <i class="bi bi-calendar-check me-2"></i>My Reservations
                </a>
                <a class="btn" style="background: var(--bg-secondary); border: 2px solid var(--border-color); color: var(--text-primary);" asp-controller="Vehicles" asp-action="Index">
                    <i class="bi bi-bicycle me-2"></i>Browse Vehicles
                </a>
                @if (userRole == "Admin")
                {
                    <a class="btn" style="background: var(--bg-secondary); border: 2px solid var(--border-color); color: var(--text-primary);" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-shield-check me-2"></i>Admin Dashboard
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
