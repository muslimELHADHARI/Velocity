@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-5 gap-3">
    <div>
        <h2 class="fw-bold text-gradient mb-1">
            <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
        </h2>
        <p class="text-muted mb-0">Manage your platform and monitor activity</p>
    </div>
    <div class="d-flex flex-wrap gap-2">
        <a class="btn btn-primary-gradient" asp-controller="Vehicles" asp-action="Index">
            <i class="bi bi-bicycle me-2"></i>Manage Vehicles
        </a>
        <a class="btn btn-primary-gradient" asp-action="Reservations">
            <i class="bi bi-calendar-check me-2"></i>Reservations
        </a>
        <a class="btn btn-primary-gradient" asp-action="Users">
            <i class="bi bi-people me-2"></i>Users
        </a>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card-modern text-center">
            <div class="mb-3">
                <div style="width: 60px; height: 60px; border-radius: 50%; background: var(--gradient-primary); display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                    <i class="bi bi-people-fill" style="font-size: 1.5rem; color: white;"></i>
                </div>
            </div>
            <p class="text-muted small mb-1">Total Users</p>
            <h3 class="fw-bold text-gradient mb-0">@Model.TotalUsers</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card-modern text-center">
            <div class="mb-3">
                <div style="width: 60px; height: 60px; border-radius: 50%; background: var(--gradient-primary); display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                    <i class="bi bi-bicycle" style="font-size: 1.5rem; color: white;"></i>
                </div>
            </div>
            <p class="text-muted small mb-1">Total Vehicles</p>
            <h3 class="fw-bold text-gradient mb-0">@Model.TotalVehicles</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card-modern text-center">
            <div class="mb-3">
                <div style="width: 60px; height: 60px; border-radius: 50%; background: var(--gradient-primary); display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                    <i class="bi bi-calendar-check" style="font-size: 1.5rem; color: white;"></i>
                </div>
            </div>
            <p class="text-muted small mb-1">Bike Reservations</p>
            <h3 class="fw-bold text-gradient mb-0">@Model.BicycleReservations</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card-modern text-center">
            <div class="mb-3">
                <div style="width: 60px; height: 60px; border-radius: 50%; background: var(--gradient-primary); display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                    <i class="bi bi-speedometer2" style="font-size: 1.5rem; color: white;"></i>
                </div>
            </div>
            <p class="text-muted small mb-1">Motor Reservations</p>
            <h3 class="fw-bold text-gradient mb-0">@Model.MotorcycleReservations</h3>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card-modern h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0 text-gradient">
                    <i class="bi bi-cash-coin me-2"></i>Online Revenue
                </h5>
                <span class="badge px-3 py-2" style="background: var(--gradient-primary); color: white; border-radius: 20px; font-size: 1rem;">@Model.OnlineRevenue TND</span>
            </div>
            <p class="text-muted mb-0">Virtual payments processed through the platform.</p>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card-modern h-100">
            <h5 class="fw-bold mb-4 text-gradient">
                <i class="bi bi-clock-history me-2"></i>Recent Vehicles
            </h5>
            @if (Model.RecentVehicles.Any())
            {
                <div class="d-flex flex-column gap-2">
                    @foreach (var v in Model.RecentVehicles)
                    {
                        <div class="p-3 rounded-3" style="background: var(--gradient-card); border: 1px solid var(--border-color);">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">@v.Name</div>
                                    <small class="text-muted">
                                        <i class="bi bi-tag me-1"></i>@v.Brand â€¢ @v.Type
                                    </small>
                                </div>
                                <span class="badge px-3 py-2" style="background: var(--gradient-primary); color: white; border-radius: 20px;">@v.PricePerHour TND/hr</span>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No recent vehicles</p>
            }
        </div>
    </div>
</div>

<div class="card-modern mt-4">
    <h5 class="fw-bold mb-4 text-gradient">
        <i class="bi bi-list-check me-2"></i>Recent Reservations
    </h5>
    @if (Model.RecentReservations.Any())
    {
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th>Vehicle</th>
                        <th>User</th>
                        <th>Dates</th>
                        <th>Status</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.RecentReservations)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@r.Vehicle?.Name</div>
                                <small class="text-muted">@r.Vehicle?.Brand</small>
                            </td>
                            <td>
                                <div class="fw-semibold">@(r.User?.Email?.Split('@')[0] ?? "N/A")</div>
                                <small class="text-muted">@r.User?.Email</small>
                            </td>
                            <td>
                                <div class="fw-semibold">@r.StartDateTime.ToLocalTime().ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">@r.StartDateTime.ToLocalTime().ToString("HH:mm") - @r.EndDateTime.ToLocalTime().ToString("HH:mm")</small>
                            </td>
                            <td>
                                <span class="badge px-3 py-2 mb-1 d-inline-block" style="background: var(--gradient-primary); color: white; border-radius: 20px;">@r.ReservationStatus</span>
                                <small class="text-muted d-block">@r.PaymentStatus</small>
                            </td>
                            <td class="fw-bold text-gradient" style="font-size: 1.125rem;">@r.TotalAmount TND</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted text-center py-4">No recent reservations</p>
    }
</div>

