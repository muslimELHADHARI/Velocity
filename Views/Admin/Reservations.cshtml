@model IEnumerable<Reservation>
@{
    ViewData["Title"] = "All Reservations";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
    <div>
        <h2 class="fw-bold text-gradient mb-1">
            <i class="bi bi-calendar-check me-2"></i>All Reservations
        </h2>
        <p class="text-muted mb-0">View and manage all bookings</p>
    </div>
    <a class="btn btn-primary-gradient" asp-action="Index">
        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>

<div class="card-modern">
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-calendar-x" style="font-size: 4rem; color: var(--text-muted); opacity: 0.5;"></i>
            <h5 class="mt-3 text-muted">No reservations found</h5>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th>Vehicle</th>
                        <th>User</th>
                        <th>Period</th>
                        <th>Payment</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        var displayName = r.User?.Email?.Contains("@") == true ? r.User.Email.Split('@')[0] : r.User?.Email ?? "N/A";
                        displayName = System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(displayName);
                        
                        <tr>
                            <td>
                                <div class="fw-semibold">@r.Vehicle?.Name</div>
                                <small class="text-muted">
                                    <i class="bi bi-tag me-1"></i>@r.Vehicle?.Brand
                                </small>
                            </td>
                            <td>
                                <div class="fw-semibold">@displayName</div>
                                <small class="text-muted">@r.User?.Email</small>
                            </td>
                            <td>
                                <div class="fw-semibold">@r.StartDateTime.ToLocalTime().ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">@r.StartDateTime.ToLocalTime().ToString("HH:mm") - @r.EndDateTime.ToLocalTime().ToString("HH:mm")</small>
                            </td>
                            <td>
                                <span class="badge px-3 py-2 mb-1 d-inline-block" style="background: var(--gradient-primary); color: white; border-radius: 20px;">@r.PaymentStatus</span>
                                <small class="text-muted d-block">
                                    <i class="bi bi-@(r.PaymentMethod == PaymentMethod.Online ? "credit-card" : "cash-coin") me-1"></i>@r.PaymentMethod
                                </small>
                            </td>
                            <td class="fw-bold text-gradient" style="font-size: 1.125rem;">@r.TotalAmount TND</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

