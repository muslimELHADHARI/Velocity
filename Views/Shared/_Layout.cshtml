<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Velocity</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Velocity.styles.css" asp-append-version="true" />
</head>
<body class="page-transition">
    <header class="navbar-wrapper">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand brand-logo" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-lightning-charge-fill me-2"></i>Velocity
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link nav-link-hover" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-hover" asp-controller="Vehicles" asp-action="Index">
                                <i class="bi bi-bicycle me-1"></i>Vehicles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-hover" asp-controller="Reservations" asp-action="My">
                                <i class="bi bi-calendar-check me-1"></i>Reservations
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-3">
                        <button class="btn btn-theme-toggle" id="themeToggle" type="button" aria-label="Toggle theme">
                            <i class="bi bi-moon-fill"></i>
                        </button>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer-wrapper">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <i class="bi bi-lightning-charge-fill me-2"></i>Velocity
                </div>
                <div class="footer-links">
                    <a asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy</a>
                    <span class="footer-separator">•</span>
                    <span>&copy; 2025 Velocity</span>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
