@using Microsoft.AspNetCore.Identity
@using Velocity.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var displayName = User.Identity?.Name;
    if (!string.IsNullOrEmpty(displayName) && displayName.Contains("@"))
    {
        displayName = displayName.Split('@')[0];
        displayName = System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(displayName);
    }
}

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item me-2">
        <a class="nav-link nav-link-hover" asp-controller="Account" asp-action="Index" title="Manage">
            <i class="bi bi-person-circle me-1"></i>@displayName
        </a>
    </li>
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item me-2">
            <a class="nav-link nav-link-hover" asp-controller="Admin" asp-action="Index">
                <i class="bi bi-shield-check me-1"></i>Admin
            </a>
        </li>
    }
    <li class="nav-item">
        <form class="d-inline" asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-link nav-link nav-link-hover">
                <i class="bi bi-box-arrow-right me-1"></i>Logout
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link nav-link-hover" asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus me-1"></i>Register
        </a>
    </li>
    <li class="nav-item">
        <a class="btn btn-primary-gradient btn-sm ms-2" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-in-right me-1"></i>Login
        </a>
    </li>
}
</ul>
